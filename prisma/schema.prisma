generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  fullname String
  password String
  phone    String
  email    String

  @@map("users")
}

model Employees {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  position   String
  department String
  hireDate   DateTime @map("hire_date")
  isActive   Boolean  @map("is_active")

  @@map("employees")
}

